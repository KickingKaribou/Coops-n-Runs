<div class="container">
    <div class="flexbox header-dashboard">
      <%= image_tag "account_placeholder.png", class: "avatar-large" %>
      <div>
        <h2 class="hello-user"><%= current_user.first_name %> <%= current_user.last_name %></h2>
        <p class="green"><%= @current_user.email %></p>

        <p><%= @farms_description %></p>
      </div>
      <%= link_to(edit_user_registration_path) do %>
        <%= image_tag "edit_icon.png", class: "edit-icon-dashboard "  %>
      <% end %>
    </div>

    <div class="link-wrapper">
        <%= link_to "Add farm", new_farm_path, class: "btn round btn-primary item-center" %>
    </div>

  <div class ="show">
    <% @farms.each do |farm| %>
      <div class="farm-card">
        <div class ="flexbox">

          <div class="flexgrow">
            <h3><%= farm.name %></h3>
            <p><%= farm.address %></p>
            <br>
            <p class="green"><a href="#"><p><%= farm.website_url %></p></a>
          </div>

          <div class="icon-bar-column">
            <div>
              <div class="flexbox icon-box-horizontal">
                <%= image_tag "coop_icon.png" %>
                <% if farm.form_of_rearing == 0 %>
                  <p>Organic</p>
                <% elsif farm.form_of_rearing == 1 %>
                  <p>Freerange</p>
                <% else %>
                  <p>Barn</p>
                <% end %>
              </div>
            </div>

              <div class="flexbox icon-box-horizontal">
               <%= image_tag "area_icon.png" %>
               <p><%= farm.area.to_i %>mÂ²</p>
              </div>

              <div class="flexbox icon-box-horizontal">
                <%= image_tag "ch_icon.png" %>
                <p><%= farm.chicken_count %></p>
              </div>
            </div>
          </div>

          <div class ="cards">
            <%= image_tag "chicken_1.png" %>
            <%= image_tag "chicken_2.png" %>
          </div>
          <div class="flexbox link-div">
            <%= link_to "Show details", farm_path(farm), class: "btn round btn-primary" %>
            <%= link_to "Edit", edit_farm_path(farm), class: "dashboard-link" %>
            <%= link_to "Delete", farm_path(farm), method: :delete, class: "dashboard-link", data: { confirm: "Are you sure?" } %>
          </div>
        </div>
    <%end%>
  </div>
</div>
