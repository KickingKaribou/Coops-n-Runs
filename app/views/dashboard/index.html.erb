<div class="container">
  <div class="flexbox header-dashboard">
    <%= image_tag "account_placeholder.png", class: "avatar-large" %>
    <h2 class="hello-user">Hello <%= current_user.first_name %></h2>
    <p>edit icon</p>
      <br>
  </div>

  <h2 class="dashboard-callout">See your farms</h2>



  <div class ="show">
    <% @farms.each do |farm| %>
      <div class="farm-card">
        <div class ="flexbox">

          <div>
            <h3><%= farm.name %></h3>
            <p><%= farm.address %></p>
            <br>
            <a href="#"><p><%= farm.website_url %></p></a>
          </div>

          <div class="icon-bar-column">
            <div>
              <div class="flexbox icon-box-horizontal">
                <%= image_tag "coop_icon.png" %>
                <% if farm.form_of_rearing == 0 %>
                  <p>Organic</p>
                <% elsif farm.form_of_rearing == 1 %>
                  <p>Freerange</p>
                <% else %>
                  <p>Barn</p>
                <% end %>
              </div>
            </div>

              <div class="flexbox icon-box-horizontal">
               <%= image_tag "area_icon.png" %>
               <p><%= farm.area.to_i %>mÂ²</p>
              </div>

              <div class="flexbox icon-box-horizontal">
                <%= image_tag "ch_icon.png" %>
                <p><%= farm.chicken_count %></p>
              </div>
            </div>
          </div>

          <div class ="cards">
            <%= image_tag "chicken_1.png" %>
            <%= image_tag "chicken_2.png" %>
          </div>
          <div class="flexbox link-div">
            <%= link_to 'show detailles', farm_path(@farms) %>
            <%= link_to 'edit', farm_path(@farms) %>
            <%= link_to 'delete', farm_path(@farms) %>
          </div>
        </div>
    <%end%>
  </div>
</div>
