<div class ="container">
  <h2><%= @farm.name %></h2>
  <div class="d-flex flex-row">
    <div class="col-sm-8">
      <div class ="p-2">
        <p>avatar</p>
      </div>
    </div>
      <div>
        <p><%= @farm.user.first_name%><%= @farm.user.last_name%></p>
        <p><%= @farm.laying_farm %></p>
        <p><%= @farm.address %></p>
        <p><%= @farm.website_url %></p>
      </div>
  </div>
   <div class="d-flex flex-row justify-content-between">
    <div class="p-2">icon 1</div>
    <div class="p-2">icon item 2</div>
    <div class="p-2">icon item 3</div>
  </div>
</div>

<div class ="container">
<h3>Satellite view</h3>
    
    <div id="map"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
</div>
