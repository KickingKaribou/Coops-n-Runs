<div class ="container show">
  <h3><%= @farm.name %></h3>
  <div class ="flexbox">
    <%= image_tag "account_placeholder.png", class: "avatar-large" %>
    <div>
      <p><%= @farm.user.first_name%> <%= @farm.user.last_name%></p>
      <p><%= @farm.address %></p>
      <a href="#"><p><%= @farm.website_url %></p></a>
    </div>
  </div>

  <div class ="row justify-content-between icon-bar">
    <div>
      <%= image_tag "coop_icon.png" %>
      <% if @farm.form_of_rearing == 0 %>
        <p>Organic</p>
      <% elsif @farm.form_of_rearing == 1 %>
        <p>Freerange</p>
      <% else %>
        <p>Barn</p>
      <% end %>

     </div>
    <div>
     <%= image_tag "area_icon.png" %>
     <p><%= @farm.area.to_i %>mÂ²</p>
    </div>
    <div>
      <%= image_tag "ch_icon.png" %>
      <p><%= @farm.chicken_count %></p>
    </div>
  </div>


  <h3>Satellite view</h3>
  <div id="map"
      style="width: 100%; height: 200px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

  <h3 class="gallery">Gallery</h3>

  <div class ="cards">
    <%= image_tag "chicken_1.png" %>
    <%= image_tag "chicken_2.png" %>
    <%= image_tag "chicken_3.png" %>
    <%= image_tag "chicken_4.png" %>
  </div>
</div>


