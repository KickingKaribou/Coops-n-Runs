<div class ="container show">
  <h3><%= @farm.name %></h3>
  <div class ="flexbox align-items-center">
    <%= image_tag "account_placeholder.png", class: "avatar-large" %>
    <div class="width-larger">
      <p><%= @farm.user&.first_name%> <%= @farm.user&.last_name%></p>
      <p><%= @farm.address %></p>
      <a href="#"><%= @farm.website_url %></a>
    </div>
  </div>

  <div class="show-details">
    <h3>Details</h3>
    <%= @farm.description %>
  </div>

  <div class ="row justify-content-between icon-bar-show">
    <div>
      <%= image_tag "coop_icon.png", class: "icon"%>
     <p><%= @farm.form_of_rearing %> </p>
     </div>
    <div>
     <%= image_tag "area_icon.png", class: "icon" %>
     <p><%= @farm.area.to_i %> mÂ²</p>
    </div>
    <div>
      <%= image_tag "ch_icon.png", class: "icon" %>
      <p><%= @farm.chicken_count.to_i %> Chickens</p>
    </div>
  </div>


  <h3>Satellite view</h3>
  <div id="map"
      style="width: 100%; height: 400px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

  <h3 class="gallery">Gallery</h3>

  <div class ="cards">
    <%= image_tag "chicken_1.png" %>
    <%= image_tag "chicken_2.png" %>
    <%= image_tag "chicken_3.png" %>
    <%= image_tag "chicken_4.png" %>
  </div>
</div>


