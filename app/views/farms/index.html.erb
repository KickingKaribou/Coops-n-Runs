<div class="container">
  <h3>Search by form of rearing</h3>
  <div class ="index">
    <% @farms.each do |farm| %>
      <div class="farm-card">
        <div class ="flexbox">

          <div>
            <h3><%= farm.name %></h3>
            <p><%= farm.address %></p>
            <br>
            <p class="green"><a href="#"><p><%= farm.website_url %></p></a>
          </div>

          <div class="icon-bar-column">
            <div>
              <div class="flexbox icon-box-horizontal">
                <%= image_tag "coop_icon.png" %>
                <% if farm.form_of_rearing == "Organic Rearing" %>
                  <p>Organic</p>
                <% elsif farm.form_of_rearing == "Free-range Rearing" %>
                  <p>Freerange</p>
                <% elsif farm.form_of_rearing == "Barn Rearing" %>
                  <p>Barn</p>
                <% else farm.form_of_rearing == "Cage Rearing" %>
                  <p>Cage</p>
                <% end %>
              </div>
            </div>

              <div class="flexbox icon-box-horizontal">
               <%= image_tag "area_icon.png" %>
               <p><%= farm.area.to_i %>mÂ²</p>
              </div>

              <div class="flexbox icon-box-horizontal">
                <%= image_tag "ch_icon.png" %>
                <p><%= farm.chicken_count %></p>
              </div>
            </div>
          </div>

          <div class ="cards">
            <%= image_tag "chicken_1.png" %>
            <%= image_tag "chicken_2.png" %>
          </div>
          <div class="flexbox link-div">
            <%= link_to "Show details", farm_path(farm), class: "btn round btn-primary" %>
          </div>
        </div>
    <%end%>
  </div>
</div>


