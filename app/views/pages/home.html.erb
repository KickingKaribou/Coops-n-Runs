<!-- search container laying farm -->

<div class="container">
  <h3>Please enter a farm code</h3>

  
  <%= form_tag farms_path, method: :get do %>
  <div class="d-flex justify-content-center align-items-center col-12">

    <div class="p-2">
      <%# <label for="form_of_rearing"></label> %>
      <select name="form_of_rearing" id="form_of_rearing">
          <option value="0">0</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
      </select>
    </div>
    
    <div class="p-2">
      <%# <label for="country"></label> %>
      <select name="country" id="country">
          <option value="DE">DE</option>
          <option value="FR">FR</option>
          <option value="UK">UK</option>
          <option value="CH">CH</option>
          <option value="NO">NO</option>
          <option value="BG">BG</option>
          <option value="PT">PT</option>
          <option value="FI">FI</option>
          <option value="SE">SE</option>
          <option value="AT">AT</option>
          <option value="NL">NL</option>
          <option value="PL">PL</option>
          <option value="HU">HU</option>
      </select>
    </div>
    
    <div class="p-2">
      <%= text_field_tag :laying_farm,
        params[:laying_farm],
        class: "form-control",
        placeholder: "1234567"
      %>
    </div>

    <span class="icon_info.png"></span>
    <%= image_tag "info_icon.png" %>

  </div>
    <div class="col-12">
      <%= submit_tag "FIND", class: "btn round btn-primary col-12" %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <h3>...or search by type</h3>

  
  <%= form_tag farms_path, method: :get do %>
  <div class="d-flex justify-content-center align-items-center col-12">

    <div class="col-12">
     <select name=farm[:form_of_rearing], class="form-control">
      <option value="None">Select</option>
      <option value="Organic Rearing">Organic rearing</option>
      <option value="Free-range Rearing">Free-range rearing</option>
      <option value="Barn Rearing">Barn rearing</option>
      <option value="Cage Rearing">Cage rearing</option>
    </select>
  </div>

  </div>
    <div class="col-12">
      <%= submit_tag "SEARCH", class: "btn round btn-outline col-12" %>
      <% end %>
    </div>
  </div>
</div>


